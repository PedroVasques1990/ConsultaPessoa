@using System.Collections.Generic
@using ConsultaPessoas.Application.Models;

@model IEnumerable<PessoaViewModel>

@{
    ViewData["Title"] = "Pessoas";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-ordenacao="Nome">Nome</a>
            </th>
            <th scope="col">Cpf</th>
            <th scope="col">
                <a asp-action="Index" asp-route-ordenacao="Idade">Idade</a>
            </th>
            <th scope="col">Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var pessoa in Model)
        {
            <tr>
                <td>@pessoa.Nome</td>
                <td>@pessoa.Cpf</td>
                <td>@pessoa.Idade</td>
                <td>@pessoa.DataNascimento</td>
                <input type="hidden" name="id" id="id" value="@pessoa.Id">
            </tr>
        }
    </tbody>
</table>